{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/drumpad", "dest": "/drumpad.html" },
    { "src": "/piano", "dest": "/piano.html" },
    { "src": "/shamisen", "dest": "/shamisen.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
